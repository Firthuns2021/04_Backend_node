npm init –y

npm install express –save
npm install express@17.17.1 --save
npm install -g nodemon
npm install mongoose --save
npm i dotenv #paquetes de variables entorno, para lectura de archivo .env

npm i cors # en esta ocasion no lo he utilizado

npm i express-validator

npm i bcryptjs  #encriptar contraseñas
npm i jsonwebtoken # paquete para generar token

npm i express-fileupload #para subida de archivos https://www.npmjs.com/package/express-fileupload

npm i uuid #para tener un identificador único para cada imagen

# https://developers.google.com/identity/gsi/web/guides/verify-google-id-token
npm install google-auth-library --save


# npm run dev



